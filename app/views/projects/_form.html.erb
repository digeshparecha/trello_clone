<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-12">
      <%= form.label :name, "Project name" %>
    </div>
    <div class="col-12">
      <%= form.text_field :name, class: "form-control", placeholder: "Enter Project Name"%>
    </div>
  </div>

  <h5 class="my-3">Stages</h5>
  <div class="row">
    <div class="col-12">
      <%= form.fields_for :stages do |stage| %>
        <%= render 'stage_fields', f: stage %>
      <%end%>
      <div class="text-end mt-3">
        <%= link_to_add_association '+ Add Stage', form, :stages, class: "btn btn-success" %>
      </div>
      
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12 text-center">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
